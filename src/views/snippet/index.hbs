<style>
  #deletewrapper {
    position: absolute;
    height: 200px;
    width: 550px;
    padding: 30px;
    background-color: rgba(211, 211, 211);
    display: flex; 
    align-items: center;
    justify-content: space-evenly;
    flex-direction: column;
    border: 4px solid lightgray;
    border-radius: 5px;
  }

  .deletelink {
    padding: 5px;
    width: 80px;
    display: inline-block;
    margin: 0 10px;
    border: 2px solid white;
  }

  .solosnippet {
    background-color: rgb(233, 180, 150);
    width: 40vw;
    min-height: 20vw;
    height: max-content;
    padding: 40px;
    border-radius: 30px;
  }

  .solosnippet strong {
    font-size: 40px;
  }

  .solosnippet  p {
    color: darkslategray;
    font-size: 30px;
  }
</style>

<div class="onewrapper">
<div class="snippet solosnippet shadow">
    {{#if snippetOwner }}
<div class="links">
    <a href="./snippet/{{viewData.id}}/edit">Edit</a>
    <a href="./snippet/{{viewData.id}}/remove">Delete</a>
</div>
{{/if}}
<strong>{{viewData.title}}</strong> 
<p>{{viewData.text}}</p>
</div>

{{#if info }}
<h1>Creator of the snippet is: {{info.author}}</h1>
<h1>Author is viewing this rn : {{info.status}}</h1>
{{/if}}



{{#if delete }}
<div id="deletewrapper">
    <h5>Are you sure you want to delete this snippet?</h5>
    <div id="deleteoptions">
        <a class="btn btn-outline-danger" href="./snippet/{{viewData.id}}/delete">Yes</a>
        <a class="btn btn-outline-dark" href="./snippet/{{viewData.id}}/nodelete">No</a>
    </div>
</div>
{{/if}}
</div>
