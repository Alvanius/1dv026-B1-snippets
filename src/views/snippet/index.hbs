<style>
  #deletewrapper {
    position: absolute;
    height: 200px;
    width: 550px;
    padding: 30px;
    background-color: rgb(248, 247, 247);
    display: flex; 
    align-items: center;
    justify-content: space-evenly;
    flex-direction: column;
    border: 4px solid lightgray;
    border-radius: 5px;
  }

  .deletelink {
    padding: 5px;
    width: 80px;
    display: inline-block;
    margin: 0 10px;
  }

#deleteoptions {
    display: flex;
    gap: 10px;
    align-items: flex-start;
    justify-content: center;
  }


  .solosnippet {
    background-color: rgb(233, 180, 150);
    width: 90vw;
    max-width: 1400px;
    min-height: 20vw;
    height: max-content;
    padding: 40px;
    border-radius: 30px;
    max-height: max-content !important;
  }

  .solosnippet strong {
    font-size: 40px;
  }

  .solosnippet  p {
    color: darkslategray;
    font-size: 30px;
  }
</style>

<div class="onewrapper">
<div class="snippet solosnippet shadow">
    {{#if snippetOwner }}
<div class="links">
    <a href="./snippet/{{viewData.id}}/edit">Edit</a>
    <a href="./snippet/{{viewData.id}}/remove">Delete</a>
</div>
{{/if}}
<strong>{{viewData.title}}</strong> 
<p>{{viewData.text}}</p>
</div>



{{#if deleteSnippet }}
<div id="deletewrapper">
    <h5>Are you sure you want to delete this snippet?</h5>
    <div id="deleteoptions">
      <form method="post" action="./snippet/{{viewData.id}}/delete">
      <button type="submit" class=" deletelink btn btn-outline-danger">Yes</button>
      </form>
      <a class="deletelink btn btn-outline-dark" href="./snippet/{{viewData.id}}/nodelete">No</a>  
    </div>
</div>
{{/if}}
</div>
