<style>
#top {
    display: flex;
    gap: 10px;
    width: max-content;
    margin: 10px auto;
    justify-content: center;
    align-items: center;
    margin-top: 70px;
    padding: 10px;
}

@media only screen and (max-width: 850px) {

       #top {
           flex-direction: column;
       }
    }
</style>
<div id="top">
    <h1 class="colorful medium">My snippets</h1>
<a  class="btn btn-outline-dark btn-lg" href="./snippets/new">Create snippet</a>
</div>

{{#if viewData.snippets.length }}
{{>snippets}}
{{/if}}

{{#unless viewData.snippets.length }}
<h2 class="spacing">Nice to see you {{nameOfUser}}. You have no snippets to display.</h2>
{{/unless}}
