<h1 id="welcome" class="py-5 colorful big spacing">Welcome to the snippet app</h1>
<div class="container">
<div class="row justify-content-evenly">

    <div class="col-md-3" id="registrationlinkwrapper">
        <h2>New to the site?</h2>
        <a id="registerlink" href="./sign-up">Register here</a>
    </div>

    
     <div id="login" class="start-form shadow p-3 mb-5 p-4 col-md-9">
    <h2 class="mb-3 over-form-text">Log in</h2>
        <form method="post" action="./log-in">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>

                
                <input type="text" {{#if username }} value="{{username}}" {{/if}} autocomplete="off" required name="username" class="form-control" minlength="1" maxlength="40" id="username">

            </div>
            <div class="mb-3">
                <label for="pwd" class="form-label">Password</label>
                <input type="password" name="password" minlength="10" maxlength="1000" required class="form-control" id="pwd">
            </div>
            <button type="submit" class="mt-4 btn btn-dark">Submit</button>
        </form>
    </div>
